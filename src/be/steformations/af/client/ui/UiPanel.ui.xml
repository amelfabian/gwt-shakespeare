<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:af="urn:import:be.steformations.af.client.ui.widget">
 
 <ui:style>
 	.blue{
		color: blue;

		
 	}
 </ui:style>
 
<m:MaterialRow marginTop="20" addStyleNames="{style.blue}">
	<m:MaterialColumn grid="s6" offset="s3">
		<m:MaterialRow> <!-- inputs-->
		
	    <m:MaterialColumn grid="s4">
	    	<af:PlayInput placeholder="Pièce" ui:field="playInput"/>
	    </m:MaterialColumn>
	    
	     <m:MaterialColumn grid="s4">
	     	<af:SpeakerInput label="Personnage" ui:field="speakerInput"/>
	    </m:MaterialColumn>
	    
	     <m:MaterialColumn grid="s4">
	     	<af:StartInput label="Début" ui:field="startInput"/>
	    </m:MaterialColumn>
	    
		</m:MaterialRow>	
		
		<m:MaterialRow> <!-- buttons-->
		
		  <m:MaterialColumn grid="s2" offset="s4">
		  <af:SearchButton text="Chercher" ui:field="searchButton"/>
	    </m:MaterialColumn>
	    
	      <m:MaterialColumn grid="s2" >
	      <af:ResetButton text="Effacer"/>
	    </m:MaterialColumn>
	    
		</m:MaterialRow>
		
		<m:MaterialRow> <!-- outputs-->
		
		</m:MaterialRow>
	</m:MaterialColumn>
</m:MaterialRow>
</ui:UiBinder> 